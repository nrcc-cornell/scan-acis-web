import React from 'react';
import PropTypes from 'prop-types';
import { withStyles } from '@material-ui/core/styles';
import green from '@material-ui/core/colors/green';
import FormLabel from '@material-ui/core/FormLabel';
import FormControl from '@material-ui/core/FormControl';
import FormGroup from '@material-ui/core/FormGroup';
import FormControlLabel from '@material-ui/core/FormControlLabel';
//import FormHelperText from '@material-ui/core/FormHelperText';
import Checkbox from '@material-ui/core/Checkbox';
import 'typeface-roboto';

const styles = theme => ({
  root: {
    display: 'flex',
    color: green[600],
    '&$checked': {
      color: green[500],
    },
  },
  checked: {},
  formControl: {
    marginLeft: theme.spacing.unit * 4,
    width: '160px',
  },
  //formControlLabel: {
  //  margin: theme.spacing.unit * 1,
  //},
});

class CheckboxesGroup extends React.Component {
  state = {
    airtemp : true,
    rainfall : false,
    soiltemp : true,
    soilmoist : false,
    humidity : false,
    solarrad : false,
    wind : false,
    leafwet : false,
  };

  handleChange = name => event => {
    this.setState({ [name]: event.target.checked });
  };

  render() {
    const { classes } = this.props;
    const { airtemp, rainfall, soiltemp, soilmoist, humidity, solarrad, wind, leafwet } = this.state;
    //const error = [airtemp, rainfall, soiltemp, soilmoist, humidity, solarrad, wind, leafwet].filter(v => v).length !== 2;

    return (
      <div className={classes.root}>
        <FormControl component="fieldset" className={classes.formControl}>
          <FormGroup className={classes.formGroup}>
            <FormControlLabel
              className={classes.formControlLabel}
              control={
                <Checkbox 
                  checked={airtemp}
                  onChange={this.handleChange('airtemp')}
                  value="airtemp"
                  classes={{
                    root: classes.root,
                    checked: classes.checked,
                  }}
                />
              }
              label="Air Temperature"
            />
            <FormControlLabel
              className={classes.formControlLabel}
              control={
                <Checkbox 
                  checked={rainfall}
                  onChange={this.handleChange('rainfall')}
                  value="rainfall"
                  classes={{
                    root: classes.root,
                    checked: classes.checked,
                  }}
                />
              }
              label="Rainfall"
            />
            <FormControlLabel
              className={classes.formControlLabel}
              control={
                <Checkbox
                  checked={soiltemp}
                  onChange={this.handleChange('soiltemp')}
                  value="soiltemp"
                  classes={{
                    root: classes.root,
                    checked: classes.checked,
                  }}
                />
              }
              label="Soil Temperature"
            />
            <FormControlLabel
              className={classes.formControlLabel}
              control={
                <Checkbox
                  checked={soilmoist}
                  onChange={this.handleChange('soilmoist')}
                  value="soilmoist"
                  classes={{
                    root: classes.root,
                    checked: classes.checked,
                  }}
                />
              }
              label="Soil Moisture"
            />
            <FormControlLabel
              className={classes.formControlLabel}
              control={
                <Checkbox
                  checked={humidity}
                  onChange={this.handleChange('humidity')}
                  value="humidity"
                  classes={{
                    root: classes.root,
                    checked: classes.checked,
                  }}
                />
              }
              label="Humidity"
            />
            <FormControlLabel
              className={classes.formControlLabel}
              control={
                <Checkbox
                  checked={solarrad}
                  onChange={this.handleChange('solarrad')}
                  value="solarrad"
                  classes={{
                    root: classes.root,
                    checked: classes.checked,
                  }}
                />
              }
              label="Solar Radiation"
            />
            <FormControlLabel
              className={classes.formControlLabel}
              control={
                <Checkbox
                  checked={wind}
                  onChange={this.handleChange('wind')}
                  value="wind"
                  classes={{
                    root: classes.root,
                    checked: classes.checked,
                  }}
                />
              }
              label="Wind"
            />
            <FormControlLabel
              className={classes.formControlLabel}
              control={
                <Checkbox
                  checked={leafwet}
                  onChange={this.handleChange('leafwet')}
                  value="leafwet"
                  classes={{
                    root: classes.root,
                    checked: classes.checked,
                  }}
                />
              }
              label="Leaf Wetness"
            />
          </FormGroup>
        </FormControl>
      </div>
    );
  }
}

CheckboxesGroup.propTypes = {
  classes: PropTypes.object.isRequired,
};

export default withStyles(styles)(CheckboxesGroup);
